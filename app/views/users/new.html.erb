<div class="container">
	<h1>Welcome</h1>
	<% if flash[:errors] %>
			<h3><ul>
		  <% flash[:errors].each do |error| %>
		    	<li><%= error %></li>
		  <% end %>
			</ul></h3>
		<% end %>
	<form class="form-inline"  action="/users" method="post">
		<div class="form-group">
			<input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>">

			Email: <br>
			<input id="email" class="form-control" type="email" name="user[email]"><br>
			Name: <br>
			<input class="form-control" id="name" type="text" name="user[name]"><br>
			Password:<br>
			<input class="form-control" id="password"type="password" name="user[password]"><br>
			Confirm Password:<br>
			<input class="form-control" id="password_confirmation" type="password" name="user[password_confirmation]"><br>
		</div>
		<br>
		<br>
		<button type="submit" class="btn btn-success btn-lg">
    		<i class="fa fa-user fa-lg"></i> Sign Up
		</button>
	</form>
	<br>
		<h3>If you already have an account log in here</h3>
	 	<a href="/sessions/new" class="btn btn-primary btn-lg" role="button" ><span class="fa fa-sign-in fa-lg"></span> Log In</a>
</div>